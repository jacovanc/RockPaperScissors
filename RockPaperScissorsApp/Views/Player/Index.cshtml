@model RockPaperScissorsApp.Models.PlayerModel

<div>
    @using (Html.BeginForm("Index", "Player", FormMethod.Post))
    {
        if (!ViewData.ModelState.IsValid)
        {
            <div>Check for errors!</div>
        }
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Player Details</th>
            </tr>
            <tr>
                <td>Name : </td>
                <td>
                    @Html.TextBoxFor(m => m.Name)
                </td>
                <td>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        try
                        {
                            <span class="field-validation-error">
                                @ViewData.ModelState["Name"].Errors[0].ErrorMessage
                            </span>
                        }
                        catch (Exception e) { } //temp workaround for out of bounds error
                    }
                </td>
            </tr>
            <tr>
                <td>E-Mail : </td>
                <td>
                    @Html.TextBoxFor(m => m.EMail)
                </td>
                <td>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        try
                        {
                            <span class="field-validation-error">
                                @ViewData.ModelState["EMail"].Errors[0].ErrorMessage
                            </span>
                        }
                        catch (Exception e) { };
                    }
                </td>
            </tr>
            <tr>
                <td>Mobile : </td>
                <td>
                    @Html.TextBoxFor(m => m.Mobile)
                </td>
                <td>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        try
                        {
                            <span class="field-validation-error">
                                @ViewData.ModelState["Mobile"].Errors[0].ErrorMessage
                            </span>
                        }
                        catch (Exception e) { }
                    }
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
</div>
